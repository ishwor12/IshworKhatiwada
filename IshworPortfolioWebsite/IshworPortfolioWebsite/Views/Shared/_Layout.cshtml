<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ishwor Khatiwada</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-code"></i> Ishwor Khatiwada
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Experience" ? "active" : "")"
                           asp-controller="Home" asp-action="Experience">Experience</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "active" : "")"
                           asp-controller="Home" asp-action="About">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Projects" ? "active" : "")"
                           asp-controller="Home" asp-action="Projects">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contact" ? "active" : "")"
                           asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
                <!-- Social Links -->
                <div class="navbar-nav ms-3">
                    <a href="#" class="nav-link" target="_blank">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="#" class="nav-link" target="_blank">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="nav-link" target="_blank">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5>Ishwor Khatiwada</h5>
                    <p>.NET C# & Dynamics 365 Developer</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="mailto:me.ishworkhatiwada2016@gmail.com" class="text-white me-3">
                        <i class="fas fa-envelope"></i> Email
                    </a>
                    <a href="tel:0224514583" class="text-white me-3">
                        <i class="fas fa-phone"></i> Call
                    </a>
                    <a href="#" class="text-white" onclick="downloadCV()">
                        <i class="fas fa-download"></i> CV
                    </a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <p class="mb-0">&copy; 2024 Ishwor Khatiwada. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function downloadCV() {
            alert('CV download functionality would be implemented here. For now, please contact me directly.');
            return false;
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>